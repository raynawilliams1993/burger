<h1>Burgers!</h1>

<h2>Available Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
<li>{{name}} <button class="burger-btn" value="{{id}}">Devoured</button></li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
   <li>{{name}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form" action="/api/burgers" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="addBurger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
